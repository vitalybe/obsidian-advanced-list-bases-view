{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "types": ["svelte", "node"],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2022",
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.svelte",
    "src/map-view.ts.backup"
  ]
}
